<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-8">
            <div class="row">

                <!-- Single Featured Post -->
                <div class="col-12 col-lg-7">
                    
                    vægter 3 se db
                    <% if(typeof featuredArticlesLeft != 'undefined'){ %>
                    <% featuredArticlesLeft.forEach(article =>{ %>

                    <div class="single-blog-post featured-post">
                        <div class="post-thumb">
                            <a href="#"><img src="/img/bg-img/<%= article.article_image%>" alt=""></a>
                        </div>
                        <div class="post-data">
                            <a href="/categories/<%= article.category_id %>" class="post-catagory"><%= article.category_title %></a>
                            <a href="#" class="post-title">
                                <h6><%= article.article_title %></h6>
                            </a>
                            <div class="post-meta">
                                <p class="post-author">By <a href="#"><%= article.author_name %></a></p>
                                <p class="post-excerp"><%= article.article_text %> </p>
                                <!-- Post Like & Post Comment -->
                                <div class="d-flex align-items-center">
                                    <a href="#" class="post-like"><img src="/img/core-img/like.png" alt=""> <span><%= article.article_likes %></span></a>
                                    <a href="#" class="post-comment"><img src="/img/core-img/chat.png" alt=""> <span>10</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
                <% } %>

                <div class="col-12 col-lg-5">
                    <!-- Single Featured Post -->
                    vægter 2 se db

                    <% if(typeof featuredArticlesMiddle != 'undefined'){ %>
                    <% featuredArticlesMiddle.forEach(article =>{ %>
                    <div class="single-blog-post featured-post-2">
                        <div class="post-thumb">
                            <a href="#"><img src="/img/bg-img/<%= article.article_image %>" alt=""></a>
                        </div>
                        <div class="post-data">
                            <a href="/categories/<%=article.category_id %>" class="post-catagory"><%= article.category_title %></a>
                            <div class="post-meta">
                                <a href="#" class="post-title">
                                    <h6><%= article.article_title %></h6>
                                </a>
                                <!-- Post Like & Post Comment -->
                                <div class="d-flex align-items-center">
                                    <a href="#" class="post-like"><img src="/img/core-img/like.png" alt=""> <span><%= article.article_likes%></span></a>
                                    <a href="#" class="post-comment"><img src="/img/core-img/chat.png" alt=""> <span>10</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <% } %>

                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
                <!-- Single Featured Post -->
                Vægter 1 se db
                <%- include('../partials/featuredArticlesRight')%>
            </div>
    </div>
</div>