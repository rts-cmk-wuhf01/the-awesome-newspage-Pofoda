                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post mb-30">
                            <div class="post-thumb">
                                <a href="#"><img src="/img/bg-img/<%=article.article_image %>" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="/categories/<%=article.category_id %>" class="post-catagory"><%= article.category_title %></a>
                                <a href="/single/<%=article.article_id %>" class="post-title">
                                    <h6><%=article.article_title %></h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#"><%=article.author_name %></a></p>
                                    <p class="post-excerp"><%=article.article_text.substring(0,200) %> </p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="#" class="post-like"><img src="/img/core-img/like.png" alt="">
                                            <span><%=article.article_likes %></span></a>
                                        <a href="#" class="post-comment"><img src="/img/core-img/chat.png" alt="">
